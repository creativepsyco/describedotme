<div class="span12">
  <div class="row">
      <h1>Upload A Widget</h1>
      <hr/>
  </div>
  <form id="widget-upload" class="form-vertical row"> 
      <div class="control-group">
        <label class="control-label" for="widgetName">Widget Name</label>
        <div class="controls">
          <input type="text" id="widgetName" placeholder="Name of the widget...">
        </div>
      </div>


      <div class="control-group">
        <label class="control-label" for="description">Description</label>
        <div class="controls">
          <textarea id ="description" rows="6" placeholder="Type some description"></textarea>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="location">Location</label>
        <div class="controls">
          <input type="text" id="location" placeholder="Where in the server is it stored..">
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="thumbnail">Thumbnail</label>
        <div class="controls">
          <input type="text" id="thumbnail" placeholder="Paste a URL">
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <button type="submit" class="btn btn-primary createWidget pull-right">Upload Widget</button>
        </div>
      </div>

    </form>

</div>



<hr>