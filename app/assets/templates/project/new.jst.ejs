<div class="span12">
	<div class="row">
	  <h3 class="pull-left" style="margin-left:20px;">Add New Project</h3>
	</div><!-- /row -->
	<hr/>
	<div class="span11">
		<form class="form row">
		  <div class="control-group">
		    <label class="control-label" for="title">Project Title</label>
		    <div class="controls">
		      <input type="text" id="title" placeholder="Title" style="width:100%;">
		    </div>
		  </div>
		  <div class="control-group">
		    <label class="control-label" for="description">Description</label>
		    <div class="controls">
		      <textarea id="description" placeholder="Description" rows="12" style="width:100%"></textarea>
		    </div>
		  </div>
		  <div class="control-group">
		    <div class="controls">
		      <input type="text" id="tag" placeholder="Tags" style="width:100%;">
		    </div>
		  </div>
		  <div class="control-group">
		  	<a id="img-upload" class="btn btn-small" href="#imageUploadModal" class="delete" data-toggle="modal"><i class="icon-picture"></i></a>
		    <div class="controls pull-right">
		      <button id="cancel" type="submit" class="btn">Cancel</button>
		      <button id="save" type="submit" class="btn btn-primary">Save</button>
		    </div>
		  </div>
		</form>
		<div class="row">
			<table id="image-table" class="table table-hover" style="border-bottom: 1px #ddd solid">
				
				
			</table>
		</div>
	</div>
</div>
<div class="modal" id="imageUploadModal" tabindex="-1" data-show="false" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Image Upload</h3>
  </div>
  <div class="modal-body">
    <div style="text-align:center;"><a class="btn" onclick="$('input').click()">Select Image</a></div>
	<input id="img-uploader" style="visibility: collapse; width: 0px;" type="file">
	<div style="text-align: center;"><img id="img-upload-preview" style="height:80px;"/></div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary">Save changes</button>
  </div>
</div>